{
	"extends": "./node_modules/gts/tsconfig-google.json",
	"compilerOptions": {
		"target": "ES6",
		"module": "nodenext",
		"strict": true,
		"esModuleInterop": true,
		"lib": ["ES6", "DOM"],
		"rootDir": "./src/",
		"outDir": "./build/",
		"baseUrl": "./src/",
		"paths": {
			"@/*": ["*"],
			"@modules/*": ["modules/*"],
			"@routes/*": ["routes/*"],
			"@types/*": ["types/*"]
		}
	},
	"include": ["src/**/*.ts", "test/**/*.ts"]
}
